transitions ::=
    transitions:tlist transition:t 
    {:
      RESULT = tlist;
      RESULT.add(t);
    :}
  | {:
        RESULT = new ArrayList<ast.Transition>();
    :}
  ;
/*********** skeletal statechart structure - end *******/

